<div class="container text-center">
    <h1 class="mt-4 mb-4">Ironhack Cinema</h1>
    <p><strong>Click on the movie to check the showtimes!</strong></p>

    <div class="row">
        {{#each movies}}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <img src="{{this.image}}" class="card-img-top img-fluid img-thumbnail" alt="{{this.title}}">
                        <a href="movies/{{this._id}}" class="btn btn-primary btn-sm mt-2">See more</a>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>




